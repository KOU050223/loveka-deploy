<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ランキングページ</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1>ランキングサイト</h1>
        <nav>
            <ul>
                <li><a href="/">ホーム</a></li>
                <li><a href="/ranking">ランキングページ</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>トップランキング</h2>
        <ul id="rankingList">
            <!-- JavaScriptでランキングデータを挿入 -->
        </ul>
    </main>
    <footer>
        <p>&copy; 2024 ランキングサイト</p>
    </footer>

    <!-- LIFF SDKの読み込み -->
    <script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>

    <script>
        // LIFFの初期化
        document.addEventListener("DOMContentLoaded", function () {
            liff.init({
                liffId: "2006601390-A9BJvE9a" // LIFF IDを指定
            }).then(() => {
                fetchRankingData(); // ランキングデータを取得して表示
            }).catch((err) => {
                console.error("LIFF初期化エラー:", err);
            });
        });

        // ランキングデータを取得して表示
        function fetchRankingData() {
            fetch('/api/ranking') // サーバーからランキングデータを取得するAPIエンドポイント
                .then(response => {
                    if (!response.ok) {
                        throw new Error("サーバーエラー: " + response.statusText);
                    }
                    return response.json();
                })
                .then(data => {
                    const rankingList = document.getElementById('rankingList'); // HTML内のul要素
                    rankingList.innerHTML = ""; // 初期化して既存データをクリア
                    data.forEach(item => {
                        const li = document.createElement('li'); // リスト要素を作成
                        li.textContent = `名前: ${item.name} - タイムスタンプ: ${item.timestamp}`;
                        rankingList.appendChild(li); // リストに追加
                    });
                })
                .catch(err => {
                    console.error("ランキングデータ取得エラー:", err);
                    const rankingList = document.getElementById('rankingList');
                    rankingList.innerHTML = "<li>データを取得できませんでした。</li>";
                });
        }
    </script>
</body>
</html>
